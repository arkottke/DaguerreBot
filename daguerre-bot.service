[Unit]
Description=Daguerre Bot 
After=network.target

[Service]
Type=simple
User=albert
WorkingDirectory=/home/albert/Documents/programs/DaguerreBot
ExecStart=/home/albert/Documents/programs/DaguerreBot/.venv/bin/python daguerre_bot.py
Restart=on-failure
RestartSec=60
KillSignal=SIGINT
StandardOutput=journal
StandardError=journal
CPUQuota=40%
MemoryMax=200M

[Install]
WantedBy=multi-user.target
